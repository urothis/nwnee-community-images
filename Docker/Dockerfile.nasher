#syntax=docker/dockerfile:1.3
ARG NWN_VERSION
FROM urothis/nwnee-community-images:ci-base-${NWN_VERSION}
LABEL maintainer "urothis@gmail.com"
WORKDIR /build
ENV PATH="/home/nasher/.nimble/bin:$PATH"
RUN git clone https://github.com/squattingmonk/nasher.git && cd nasher && nimble build -d:release -y
ENTRYPOINT ["/build/nasher/nasher"]
CMD ["--version"]
